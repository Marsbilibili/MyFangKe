<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fangke.com.activity.NewhouseSearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#EEEEEE"
        android:orientation="horizontal"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="38dp"
            android:layout_marginLeft="10dp"
            android:background="#E5E5E5">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/home_servch_icon" />

            <EditText
                android:id="@+id/newhouse_search_ed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:background="@null"
                android:hint="请输入小区名或地址"
                android:textCursorDrawable="@drawable/shape_ed_cursor"
                android:textSize="16dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/newhouse_search_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="19dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height=".1dp"
        android:background="@color/gray_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="热门搜索:"
            android:textColor="@color/mblue"
            android:textSize="18sp" />

        <fangke.com.view.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <fangke.com.view.NoRepeatButton
                android:id="@+id/newhouse_search_item1"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_newhouse_search_btn"
                android:onClick="click"
                android:text="配套成熟"
                android:textColor="@color/mblue" />

            <fangke.com.view.NoRepeatButton
                android:id="@+id/newhouse_search_item2"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_newhouse_search_btn"
                android:onClick="click"
                android:text="繁华地段"
                android:textColor="@color/mblue" />

            <fangke.com.view.NoRepeatButton
                android:id="@+id/newhouse_search_item3"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_newhouse_search_btn"
                android:onClick="click"
                android:text="交通便利"
                android:textColor="@color/mblue" />

            <fangke.com.view.NoRepeatButton
                android:id="@+id/newhouse_search_item4"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_newhouse_search_btn"
                android:onClick="click"
                android:text="近地铁"
                android:textColor="@color/mblue" />

            <fangke.com.view.NoRepeatButton
                android:id="@+id/newhouse_search_item5"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/selector_newhouse_search_btn"
                android:onClick="click"
                android:text="品质小区"
                android:textColor="@color/mblue" />

            <fangke.com.view.NoRepeatButton
                android:id="@+id/newhouse_search_item6"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/selector_newhouse_search_btn"
                android:onClick="click"
                android:text="环境优美"
                android:textColor="@drawable/selector_newhouse_search_text" />

        </fangke.com.view.FlowLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#E0E0E0"
        android:padding="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索历史："
            android:textColor="@color/gray_light"
            android:textSize="14dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/newhouse_search_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>
